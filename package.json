{
  "name": "serverless-plugin-static",
  "version": "0.0.4",
  "description": "serverless framework plugin to server static files locally",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sashkopavlenko/serverless-plugin-static.git"
  },
  "keywords": [
    "serverless",
    "offline",
    "static"
  ],
  "author": "sashkopavlenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashkopavlenko/serverless-plugin-static/issues"
  },
  "homepage": "https://github.com/sashkopavlenko/serverless-plugin-static#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/serverless": "^1.78.15",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "audit-ci": "^3.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "errorOnDeprecated": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -1
      }
    }
  }
}
